{
  "compilerOptions": {
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "./dist/public/",
    "lib": ["dom", "es6"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@Server/*": ["server/*"],
      "@Client/*": ["client/*"]
    }
  },
  "exclude": ["node_modules", "bin", "dist", "dist-server"]
}
